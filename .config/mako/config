# ~/.config/mako/config

# Set the maximum number of notifications displayed at once
max-visible=5

# Set the default timeout for notifications (in milliseconds)
default-timeout=4000

# Define the position of notifications on the screen
anchor=top-right

# Set the margin around notifications
margin=10

# Set the padding within notifications
padding=12

# Define the width of notifications
width=300

# Define the height of notifications
height=80

# Set the border
border-size=2
border-color=#CCD0DA
border-radius=8

# Set the background and text colors
background-color=#EFF1F5
text-color=#4C4f69

# Set the font
font=Roboto 12